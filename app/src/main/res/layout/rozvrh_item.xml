<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_container"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/begintime"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:fontFamily="monospace"
            android:textColor="#484848"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/datum"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_below="@id/begintime"
            android:layout_marginTop="4sp"
            android:background="@drawable/circle_ukol_aktivni"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/endtime"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tema"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:textColor="#484848"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            android:layout_marginTop="-4sp"
            android:layout_toEndOf="@id/begintime"
            android:layout_alignBottom="@id/endtime"
            android:layout_alignTop="@id/begintime"
            android:src="@drawable/gradient_rozvrh_a"
            android:scaleType="matrix"/>

        <TextView
            android:id="@+id/pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"

            android:layout_toEndOf="@id/begintime"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lineHeight="20sp"
            android:maxLines="1"
            android:textColor="#212121"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/zkruc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="4sp"
            android:layout_toEndOf="@id/pr"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lineHeight="20sp"
            android:maxLines="1"
            android:textColor="#484848"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/zkrmist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/begintime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pr"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16sp"
            android:layout_toEndOf="@id/begintime"
            android:ellipsize="end"
            android:gravity="top"
            android:lineHeight="20sp"
            android:maxLines="2"
            android:layout_marginTop="2sp"
            android:textColor="#484848"
            android:textSize="14sp" />


    </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="0dp"
            android:background="#e0e0e0" />
</RelativeLayout>