<resources>

    <style name="Bakalab.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Bakalab.NoActionBar.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="Bakalab.ToolbarStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="actionMenuTextColor">@color/secondaryColor</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="Bakalab.NoNavActivityTheme" parent="Bakalab.NoActionBar">
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
    </style>

    <style name="Bakalab.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="Bakalab.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Widget.Bakalab.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primaryTextColor</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextColor">@color/primaryTextColor</item>
        <item name="tabMode">fixed</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

</resources>
