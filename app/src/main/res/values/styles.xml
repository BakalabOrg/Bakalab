<resources>

    <style name="Bakalab.Partial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#9e9e9e</item>
    </style>

    <style name="Bakalab.NoActionBar" parent="Bakalab.Partial">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Bakalab.Navigation" parent="Bakalab.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:activatedBackgroundIndicator">@null</item>
    </style>

    <style name="Bakalab.ToolbarStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="Bakalab.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="Bakalab.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Widget.Bakalab.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">?android:textColorSecondaryInverse</item>
        <item name="tabMode">fixed</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

</resources>
